<h1><%= @city.name %></h1>
<% @city.businesses.each do |shop| %>
  
    <div class="col-md-1 col-sm-1 col-lg-1 col-xs-1">          
        
    </div>
    <h3><%= shop.name %></h3>
    <br>   
    
    <%= shop.body %>
    <p>Address: <%= shop.address %></p>
    <br>
    <%= link_to "Delete Shop", [@city, shop], method: :delete, data: {confirm: "Are you sure you want to delete this shop?"}, class: "btn btn-danger" %>
  
  <hr>
<% end %>
<br>
<%= link_to "All Cities", cities_path, class: "btn btn-danger" %>

<%= form_for [@city, @business] do |f| %>
  <div class="form-group">
    <p><%= f.label :name, "Shop name:" %>
    <br>
    <%= f.text_field :name, class: "form-control" %></p>

    <p><%= f.label :body, "Shop description:" %>
    <br>
    <%= f.text_area :body, class: "form-control" %></p>

    <p><%= f.label :address, "Enter Shop Address:" %>
    <br>
    <%= f.text_field :address, class: "form-control" %></p>

  
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>